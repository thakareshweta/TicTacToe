<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center" app:layout_constraintTop_toTopOf="@+id/refresh"
            android:id="@+id/tableLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button1" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button2" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button3" android:onClick="buttonClicked"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button4" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button5" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button6" android:onClick="buttonClicked"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center">
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button7" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button8" android:onClick="buttonClicked"/>
            <Button
                    android:layout_margin="1dp"
                    android:layout_width="40pt"
                    android:layout_height="40pt" android:id="@+id/button9" android:onClick="buttonClicked"/>
        </TableRow>
    </TableLayout>
    <Button
            android:layout_width="40pt"
            android:layout_height="20pt"
            android:id="@+id/refresh" android:visibility="invisible"
            android:onClick="refreshGame" tools:text="Refresh"
            android:textColorLink="#9C27B0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="95dp"
            app:layout_constraintEnd_toEndOf="parent" tools:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>